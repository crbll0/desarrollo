<odoo>
    <data>
        <record id="account_move_bill_calc" model="ir.ui.view">
            <field name="name">Bill calc account move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='other_info']" position="before">
                    <page name="billing_info" string="Billing Information">
                        <field name="bill_id" invisible="1"/>
                        <field name="id_billing_service"/>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="product_bill_calc" model="ir.ui.view">
            <field name="name">Bill calc product</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='variants']" position="after">
                    <page name="billing_info" string="Billing Information">
                        <group string="Billing Information">
                            <field name="bill_id" invisible="1"/>
                            <field name="process_date"/>
                            <field name="processed_state"/>
                            <field name="billing_period"/>
                            <field name="id_billing_calculation"/>
                        </group>
                        <group>
                            <field name="payment_reference"/>
                            <field name="billing_date"/>
                            <field name="billing_currency"/>
                        </group>
                        <group>
                            <field name="ind_invoice_core"/>
                            <field name="ind_web_service"/>
                            <field name="ind_reject_core"/>
                        </group>
                        <group>
                            <field name="id_billing_detail"/>
                            <field name="service_rate"/>
                            <field name="quantity"/>
                            <field name="net_amount"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
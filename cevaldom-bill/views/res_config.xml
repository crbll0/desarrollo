<odoo>
  <data>
    <record id="res_config_core_calc" model="ir.ui.view">
      <field name="name">core Calculation Configuration</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@name='integration']" position="after">
                <h2>CoreSystem configuration</h2>
                <div class="row mt16 o_settings_container">
                  <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">

                      <label for="core_host">Host</label>
                      <div class="text-muted">
                        Server host for core calculations
                      </div>
                      <div class="mt16">
                        <field name="core_host" class="o_light_label"/>
                      </div>

                      <label for="core_port">Port</label>
                      <div class="text-muted">
                        Port to connect to core calculations server
                      </div>
                      <div class="mt16">
                        <field name="core_port" class="o_light_label"/>
                      </div>

                      <label for="core_user">Username</label>
                      <div class="text-muted">
                        Username for login into the server database
                      </div>
                      <div class="mt16">
                        <field name="core_user" class="o_light_label"/>
                      </div>

                      <label for="core_pass">Password</label>
                      <div class="text-muted">
                        Password for database username
                      </div>
                      <div class="mt16">
                        <field name="core_pass" class="o_light_label"/>
                      </div>

                      <label for="core_db">Database Name</label>
                      <div class="text-muted">
                        Database name for CoreSystem calculation
                      </div>
                      <div class="mt16">
                        <field name="core_db" class="o_light_label"/>
                      </div>

                    </div>
                  </div>
                </div>
          </xpath>
      </field>
    </record>
  </data>
</odoo>
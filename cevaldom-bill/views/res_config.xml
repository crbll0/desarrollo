<odoo>
  <data>
    <record id="res_config_bill_calc" model="ir.ui.view">
      <field name="name">Bill Calculation Configuration</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@name='integration']" position="after">
                <h2>Bill configuration</h2>
                <div class="row mt16 o_settings_container">
                  <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">

                      <label for="bill_host">Host</label>
                      <div class="text-muted">
                        Server host for bill calculations
                      </div>
                      <div class="mt16">
                        <field name="bill_host" class="o_light_label"/>
                      </div>

                      <label for="bill_port">Port</label>
                      <div class="text-muted">
                        Port to connect to bill calculations server
                      </div>
                      <div class="mt16">
                        <field name="bill_port" class="o_light_label"/>
                      </div>

                      <label for="bill_user">Username</label>
                      <div class="text-muted">
                        Username for login into the server database
                      </div>
                      <div class="mt16">
                        <field name="bill_user" class="o_light_label"/>
                      </div>

                      <label for="bill_pass">Password</label>
                      <div class="text-muted">
                        Password for database username
                      </div>
                      <div class="mt16">
                        <field name="bill_pass" class="o_light_label"/>
                      </div>

                      <label for="bill_db_name">Database Name</label>
                      <div class="text-muted">
                        Database name for bill calculation
                      </div>
                      <div class="mt16">
                        <field name="bill_db_name" class="o_light_label"/>
                      </div>

                    </div>
                  </div>
                </div>
          </xpath>
      </field>
    </record>
  </data>
</odoo>
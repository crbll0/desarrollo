<!--                    view_mode="tree,form"-->
<!--        />-->

        <menuitem id="cevaldom-bill-menu"
                  string="Cevaldom Billing Information"
                  parent="account.menu_account_config"
                  action="cevaldom-bill.system_core_action"
        />
q
    </data>
</odoo>
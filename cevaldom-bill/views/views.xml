<odoo>
    <data>
        <record id="core_system_tree_view" model="ir.ui.view">
            <field name="name">CoreSystem Tree</field>
            <field name="model">core.system</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date"/>
                </tree>
            </field>
        </record>
        
        <record id="core_system_form_view" model="ir.ui.view">
            <field name="name">CoreSystem Form</field>
            <field name="model">core.system</field>
            <field name="arch" type="xml">
                <form>
                  <header>
                      <button name="import_data" type="object" string="Cargar"/>
                      <button name="depurate_contacts_services" type="object" string="Depuracion de contactos y servicios"/>
                    <field name="state" widget="statusbar"/>
                  </header>
                  <sheet>
                    <div name="button_box" class="oe_button_box">

                    </div>
                    <group>
                      <group>
                        <field name="date"/>
                      </group>
                    </group>
                    <notebook>
                      <page string="Detalle">
                        <group>
                            <field name="line_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="core_id" invisible="1"/>
                                    <field name="id_billing_calc_process" invisible="1"/>
                                    <field name="process_date"/>
                                    <field name="processed_state"/>
                                    <field name="billing_period"/>
                                    <field name="id_billing_calculation"/>
                                    <field name="payment_reference" invisible="1"/>
                                    <field name="billing_date" invisible="1"/>
                                    <field name="billing_currency" invisible="1"/>
                                    <field name="ind_invoice_core" invisible="1"/>
                                    <field name="ind_web_service" invisible="1"/>
                                    <field name="ind_reject_core" invisible="1"/>
                                    <field name="id_billing_detail" invisible="1"/>
                                    <field name="service_rate" invisible="1"/>
                                    <field name="quantity" invisible="1"/>
                                    <field name="net_amount" invisible="1"/>
                                    <field name="id_billing_service"/>
                                    <field name="entity_code" invisible="1"/>
                                    <field name="person_type" invisible="1"/>
                                    <field name="document_type" invisible="1"/>
                                    <field name="entity_name"/>
                                    <field name="entity_address" invisible="1"/>
                                    <field name="entity_district" invisible="1"/>
                                    <field name="entity_province" invisible="1"/>
                                    <field name="entity_type" invisible="1"/>
                                    <field name="entity_collection" invisible="1"/>
                                    <field name="id_holder" invisible="1"/>
                                    <field name="id_issuer" invisible="1"/>
                                    <field name="id_participant" invisible="1"/>
                                    <field name="id_entity_block" invisible="1"/>
                                </tree>
                            </field>
                        </group>
                      </page>
                    </notebook>
                  </sheet>
                </form>
            </field>
        </record>
        
        <record id="core_system_action" model="ir.actions.act_window">
            <field name="name">Core System</field>
            <field name="res_model">core.system</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="core_system_menu"
                  string="Core Billing Process"
                  parent="account_accountant.menu_accounting"
                  action="core_system_action"
        />

    </data>
</odoo>
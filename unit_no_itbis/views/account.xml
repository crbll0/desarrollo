<odoo>
    <data> 
        <template id="report_invoice_document" inherit_id="account.report_invoice_document">
            <xpath expr="//th[@name='th_taxes']" position="after">
                <th name="th_unit_no_itbis" class="text-right">
                    Precio S/ITBIS
                </th>
            </xpath>

            <xpath expr="//tbody[1]/t[3]/tr[1]/t[1]/td[5]" position="after">
                <td name="td_unit_no_itbis" class="text-right">
                    <span t-esc='"{:,.2f}".format(float(line.price_unit)/1.18)'></span>
                </td>
            </xpath>
        </template>
    </data>
</odoo>